{
    "name": "Metabase",
    "id": "metabase",
    "packaging_format": 1,
    "description": {
        "en": "Helps you build dashboards from data.",
        "fr": "Vous aide à construire des tableaux de bord à partir de données."
    },
    "version": "1.0~ynh1",
    "url": "https://example.com",
    "license": "MIT",
    "maintainer": {
        "name": "Colin Maudry",
        "email": "colin@maudry.com",
        "url": ""
    },
    "requirements": {
        "yunohost": ">= 4.1.3"
    },
    "multi_instance": false,
    "services": [
        "nginx"
    ],
    "arguments": {
        "install" : [
            {
                "name": "domain",
                "type": "domain",
                "ask": {
                    "en": "Choose a domain name for ynhexample",
                    "fr": "Choisissez un nom de domaine pour ynhexample"
                },
                "example": "metabase.example.com"
            },
            {
                "name": "is_public",
                "type": "boolean",
                "ask": {
                    "en": "Is it a public application?",
                    "fr": "Est-ce une application publique ?"
                },
                "default": false
            }
        ]
    }
}
